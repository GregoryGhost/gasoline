<Window x:Class="GasoLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="423.684" Width="601.316" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="Map" HorizontalAlignment="Left" Height="341" Margin="0,54,0,0" VerticalAlignment="Top" Width="595"/>
        <Menu Margin="0,0,0,367">
            <MenuItem Header="File">
                <MenuItem Header="New"></MenuItem>
                <MenuItem Header="Open"></MenuItem>
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Save As..."></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"></MenuItem>
                <MenuItem Header="Redo"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Cut"></MenuItem>
                <MenuItem Header="Copy"></MenuItem>
                <MenuItem Header="Paste"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar x:Name="toolBar" HorizontalAlignment="Left" Height="35" Margin="0,19,0,0" VerticalAlignment="Top" Width="595">
            <Button x:Name="btnAdd" Content="Add" Height="35" Margin="0,0,0,-5" VerticalAlignment="Top" Width="50"/>
            <Button x:Name="btnRefresh" Content="Refresh" Height="35" Margin="0,0,0,-5" VerticalAlignment="Top" Width="50"/>
            <Button x:Name="btnRemove" Content="Remove" Height="35" Margin="0,0,0,-5" VerticalAlignment="Top" Width="50"/>
        </ToolBar>
    </Grid>
</Window>
    
